@attribute [Authorize(Policy = AuthorizationHandler.ActiveSessionPolicy)]
@page "/customer/history"
@layout Shared.CustomerPageLayout
<PageTitle>@config.StoreName - 주문 내역</PageTitle>

<div class="alert alert-info shadow" onclick="location.href='@config.SurveyUrl'">
    <div class="card-body d-flex flex-row">
        <div class="me-3" style="font-size: 2rem;">
            📋
        </div>
        <div>
            <h6 class="mb-1 fw-bold">소프트웨어 개선을 위한 앙케이트에 참여하기</h6>
            <span class="fw-light">이 배너를 클릭하여 귀하의 소중한 의견을 전달해 주십시오.</span>
        </div>
    </div>
</div>
@if (_orders is not null)
{
    @if (_totalOrderCount == 0)
    {
        <div class="d-flex flex-column justify-content-center align-items-center text-secondary mt-5">
            <i class="bi bi-clipboard-x mb-2" style="font-size: 4rem; line-height: 1.2"></i>
            <h5>주문 내역이 없습니다.</h5>
        </div>
    }
    else
    {
        <div class="d-flex flex-row justify-content-between mt-5">
            <div>
                <h5>총 합계: @CurrencyFormat(_totalAmount)</h5>
                <h6 class="text-secondary">총 @(_totalOrderCount)개의 주문 내역이 있습니다.</h6>
            </div>
            <div>
                <button class="btn btn-primary" @onclick="OnSessionEndBtnClickAsync">결제 요청</button>
            </div>
        </div>
        <div class="d-flex flex-column py-3 gap-4">
            @foreach (var o in _orders!)
            {
                <div class="card shadow">
                    <div class="card-header">
                        <span class="text-secondary font-monospace me-2">#@o.OrderId</span>
                        <span>@o.CreatedAt.ToString("yyyy. MM. dd - hh:mm:ss 주문")</span>
                        <div class="float-end">

                            @if (o.Status == Models.Order.OrderStatus.Received)
                            {
                                <span class="text-secondary">접수</span>
                                <i class="bi bi-check-lg text-secondary"></i>
                            }
                            else if (o.Status == Models.Order.OrderStatus.Cancelled)
                            {
                                <span class="text-danger">취소</span>
                                <i class="bi bi-x-lg text-danger"></i>
                            }
                            else
                            {
                                <span class="text-success">완료</span>
                                <i class="bi bi-check-lg text-success"></i>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @{ int subtotal = 0; }
                        @if (o.OrderItems.Count != 0)
                        {
                            <ul>
                                @foreach (var i in o.OrderItems)
                                {
                                    subtotal += i.Quantity * i.Item.Price;
                                    <li class="mb-3">
                                        <p class="mb-0">@i.Item.Name</p>
                                        <span class="text-secondary monospace-font">@CurrencyFormat(i.Item.Price) x @i.Quantity = @CurrencyFormat(i.Item.Price * i.Quantity)</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-danger">이 주문은 연결된 주문 정보가 없습니다.</p>
                        }
                        @if (o.Status == Models.Order.OrderStatus.Cancelled)
                        {
                            <h6 class="mb-0 text-danger text-decoration-line-through">주문 합계: @CurrencyFormat(subtotal)</h6>
                            <span class="text-danger">주문이 취소되어 합계에 반영되지 않습니다.</span>
                        }
                        else
                        {
                            @if (o.OrderItems.Count != 0)
                            {
                                <h6 class="mb-0 text-secondary">주문 합계: @CurrencyFormat(subtotal)</h6>
                            }
                            else
                            {
                                <h6 class="mb-0 text-secondary">무효</h6>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }
}
