<CascadingAuthenticationState>
    <Router AppAssembly="typeof(App).Assembly">
        <Found Context="routeData">
            <ModalHost></ModalHost>
            <AuthorizeRouteView RouteData="@routeData">
                <NotAuthorized>
                    @if (context.User.Identity!.IsAuthenticated != true)
                    {
                        <RedirectToAuthorize></RedirectToAuthorize>
                    }
                    else
                    {
                        <AuthorizationFailedHandler />
                    }
                </NotAuthorized>
                <Authorizing>
                    <AuthorizingPage></AuthorizingPage>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <Error Code="404" Message="페이지를 찾을 수 없음"></Error>
        </NotFound>
    </Router>
</CascadingAuthenticationState>