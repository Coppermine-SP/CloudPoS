<div class="row g-4 h-100 mt-1">
    <!-- Left Panel: Table Layout Grid -->
    <div class="col-12 col-xl-8">
        <div class="p-3 d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">테이블 배치도</h5>
                <div>
                    @if (_isModify)
                    {
                        <button class="btn btn-secondary me-2" @onclick="CancelChanges">취소</button>
                        <button class="btn btn-success" @onclick="SaveChanges">저장</button>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center flex-grow-1" style="min-height: 0;">
                <div id="grid-container" class="table-grid-container">
                    @for (int y = 0; y < 6; y++)
                    {
                        @for (int x = 0; x < 6; x++)
                        {
                            var cellX = x;
                            var cellY = y;
                            var tableInCell = PlacedTables.FirstOrDefault(t => t.Cell != null && t.Cell.X == cellX && t.Cell.Y == cellY);

                            <div @key="(cellX, cellY)" class="grid-cell border bg-body-tertiary" data-x="@cellX" data-y="@cellY">
                                @if (tableInCell != null)
                                {
                                    <div class="table-item d-flex align-items-center justify-content-center bg-black bg-opacity-50 text-white position-relative"
                                         data-table-id="@tableInCell.TableId">
                                        @tableInCell.Name
                                        <button class="btn btn-sm btn-outline-light border-0 position-absolute top-0 end-0 m-1 p-0 px-1" @onclick="() => ManageTableAsync(tableInCell.TableId, tableInCell.Name)">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Right Panel: Table Management -->
    <div class="col-12 col-xl-4">
        <div class="bg-body-tertiary shadow rounded p-4 h-100 d-flex flex-column">
            <h5 class="mb-3">테이블 관리</h5>
            <div class="mb-4">
                <div class="mb-2">
                    <label for="tableName" class="form-label">테이블 이름</label>
                    <input type="text" id="tableName" class="form-control" @bind="_newTableName" placeholder="테이블 이름을 입력하십시오.">
                </div>
                <button class="btn btn-primary w-100" @onclick="CreateTableAsync" disabled="@string.IsNullOrWhiteSpace(_newTableName)">생성하기</button>
            </div>
            <hr/>
            <div class="flex-grow-1 d-flex flex-column position-relative" style="min-height: 0;">
                <h6>배치되지 않은 테이블</h6>
                <div id="unplaced-list" class="unplaced-grid-container overflow-auto h-100 p-1">
                    @if (UnplacedTables.Any())
                    {
                        @foreach (var table in UnplacedTables)
                        {
                            <div @key="table.TableId"
                                 class="table-item d-flex align-items-center justify-content-center bg-black bg-opacity-50 text-white position-relative" style="backdrop-filter: blur(5px); font-size: 12px"
                                 data-table-id="@table.TableId">
                                @table.Name
                                <button class="btn btn-sm btn-outline-light border-0 position-absolute top-0 end-0 m-1 p-0 px-1"
                                        @onclick="() => ManageTableAsync(table.TableId, table.Name)">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted position-absolute w-100 h-100 d-flex flex-column align-items-center justify-content-center no-drag empty-state">
                            <i class="bi bi-exclamation-triangle fs-1"></i>
                            <h6>테이블이 없습니다.</h6>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>