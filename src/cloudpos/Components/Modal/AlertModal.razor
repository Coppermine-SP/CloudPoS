@inherits ModalComponentBase

<p class="fs-6 lh-base mb-0 fw-light" i>@((MarkupString)InnerHtml)</p>
<div class="d-flex justify-content-end gap-3 py-2">
    @if (IsCancelable)
    {
        <button type="button"
                class="btn btn-outline-secondary px-3" @onclick="() => CloseModal(false)">
            취소
        </button>
    }
    <button type="button"
            class="btn btn-primary px-3" @onclick="() => CloseModal(true)">
        확인
    </button>
</div>
@code {
    [Parameter] public bool IsCancelable { get; set; } = false;
    [Parameter] public required string InnerHtml { get; set; }
    
}