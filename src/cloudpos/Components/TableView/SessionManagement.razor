<div class="text-muted">
    <h5 class="mt-3">테이블 정보</h5>
    <div class="d-flex justify-content-between align-items-center mb-2">
        <span>테이블 위치 : @TableSession.Table.Name</span>
        <button class="btn btn-sm btn-secondary" >테이블 위치 변경</button>
    </div>
    <h5 class="mt-3">세션 정보</h5>
    <div>
        세션 번호 : #@TableSession.SessionId
    </div>
    <div class="d-flex justify-content-between align-items-center mb-2">
        <span>세션 상태 : @StateToKorean</span>
        @switch (StateToKorean)
        {
            case "활성":
                if (!TableSession.Orders.Any())
                {
                    <button class="btn btn-sm btn-danger" @onclick="() => ShowCompleteSessionModalAsync(TableSession.SessionId)">세션 비활성화</button>
                }
                else
                {
                    <button class="btn btn-sm btn-warning" @onclick="() => ShowEndSessionAsyncModalAsync(TableSession.SessionId)">주문 완료 처리</button>
                }

                break;
            case "결제 중":
                <button class="btn btn-sm btn-success"
                        @onclick="() => ShowCompleteSessionModalAsync(TableSession.SessionId)">결제 완료</button>
                break;
        }
    </div>
    <div class="mb-2">
        총 금액 : <span class="text-end text-success text-bold">@CurrencyFormat(TotalAmount)</span>
    </div>
    <div>
        <div class="d-flex align-items-baseline">
            <label class="form-label me-1">인증 코드 : </label>
            <div class="input-group w-75">
                <input type="text" class="form-control monospace-font"
                       value="@(TableSession.AuthCode)" readonly/>
                <button class="btn btn-outline-secondary" type="button" @onclick="ShowShareSessionModalAsync" title="QRCode">
                    <i class="bi bi-qr-code"></i>
                </button>
            </div>
        </div>
    </div>
    <h5 class="mt-5">주문 리스트</h5>
    @foreach (var order in TableSession.Orders)
    {
        <div class="accordion my-2" id="accordion-@order.OrderId">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@order.OrderId" aria-expanded="false"
                            aria-controls="collapse-@order.OrderId">
                        <div class="d-flex justify-content-between w-100">
                            <span>주문 #@order.OrderId</span>
                            <span class="me-3">@order.CreatedAt.ToString("T")</span>
                        </div>
                    </button>
                </h2>
                <div id="collapse-@order.OrderId" class="accordion-collapse collapse"
                     data-bs-parent="#accordion-@order.OrderId">
                    <div class="accordion-body">
                        <table class="w-100">
                            <thead>
                            <tr class="text-muted small">
                                <td>메뉴</td>
                                <td>수량</td>
                                <td class="text-end">합계</td>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var i in order.OrderItems)
                            {
                                <tr class="monospace-font">
                                    <td>@i.Item.Name</td>
                                    <td>@i.Quantity</td>
                                    <td class="text-end">@CurrencyFormat(i.Quantity * i.Item.Price)</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>