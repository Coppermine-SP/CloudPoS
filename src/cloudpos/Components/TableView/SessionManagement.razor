<div xmlns="http://www.w3.org/1999/html">
    <h6>세션 정보</h6>
    <div class="text-muted">
        <span>세션 번호:</span><span class="float-end">#@TableSession.SessionId</span><br/>
        <span>테이블 위치:</span><span class="float-end"> @TableSession.Table.Name</span><br/>
        <span>세션 상태:</span><span class="float-end"> @StateToKorean</span><br/>
        <span>인증 코드:</span><span class="float-end monospace-font">@(TableSession.AuthCode ?? "무효")</span><br/>
        <span>총 금액:</span><span class="float-end text-bold">@CurrencyFormat(TotalAmount)</span>
    </div>
    <hr/>
    <h6 class="mt-4 mb-3">세션 동작</h6>
    <div class="d-flex justify-content-between gap-4 align-items-center mb-4">

        <button class="btn btn-outline-primary" @onclick="() => ShowTableSelectModalAsync(TableSession.SessionId)">
            <i class="bi bi-table me-1"></i>
            테이블 이동
        </button>
        <button class="btn btn-outline-primary" @onclick="ShowShareSessionModalAsync">
            <i class="bi bi-qr-code-scan me-1"></i>
            공유
        </button>
        @switch (StateToKorean)
        {
            case "활성":
                if (!TableSession.Orders.Any())
                {
                    <button class="btn btn-outline-danger" @onclick="() => ShowCompleteSessionModalAsync(TableSession.SessionId)">
                        <i class="bi bi-x-lg me-1"></i>
                        종료
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-danger" @onclick="() => ShowEndSessionAsyncModalAsync(TableSession.SessionId)">
                        <i class="bi bi-x-lg me-1"></i>
                        완료
                    </button>
                }

                break;
            case "종료":
                <button class="btn btn-outline-success"
                        @onclick="() => ShowCompleteSessionModalAsync(TableSession.SessionId)">
                    <i class="bi bi-check-lg me-1"></i>
                    완료
                </button>
                break;
        }
    </div>
    <hr/>
    <h6 class="mt-4">연결된 주문</h6>
    @if (TableSession.Orders.Any())
    {
        <div class="accordion" id="accordion">
            @foreach (var order in TableSession.Orders)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse-@order.OrderId" aria-expanded="false"
                                aria-controls="collapse-@order.OrderId">
                            <div class="d-flex justify-content-between w-100">
                                <span class="monospace-font">#@order.OrderId</span>
                                <span class="float-end">
                                    @if (order.Status == Order.OrderStatus.Completed)
                                    {
                                        <span class="text-success">완료</span>
                                        <i class="bi bi-check-lg text-success"></i>

                                    }
                                    else if(order.Status == Order.OrderStatus.Cancelled)
                                    {
                                        <span class="text-danger">취소</span>
                                        <i class="bi bi-x-lg text-danger"></i>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">접수</span>
                                        <i class="bi bi-check-lg text-secondary"></i>
                                    }
                                </span>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse-@order.OrderId" class="accordion-collapse collapse"
                         data-bs-parent="#accordion-@order.OrderId">
                        <div class="accordion-body">
                            <div class="text-muted mb-3">
                                <span>주문 일시:</span>
                                <span class="float-end">@order.CreatedAt.ToString("yyyy-MM-dd hh:mm:ss")</span><br/>
                                <span>합계:</span>
                                <span class="float-end">@CurrencyFormat(order.OrderItems.Sum(x=> x.Quantity * x.Item.Price))</span>
                            </div>
                            <table class="w-100">
                                <thead>
                                <tr class="text-muted small">
                                    <td>메뉴</td>
                                    <td>수량</td>
                                    <td class="text-end">합계</td>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var i in order.OrderItems)
                                {
                                    <tr class="monospace-font">
                                        <td>@i.Item.Name</td>
                                        <td>@i.Quantity</td>
                                        <td class="text-end">@CurrencyFormat(i.Quantity * i.Item.Price)</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="d-flex flex-column align-items-center justify-content-center text-muted mt-4">
        <i class="bi bi-exclamation-triangle fs-1"></i>
        <h6>연결된 주문 없음</h6>
        </div>
    }
</div>