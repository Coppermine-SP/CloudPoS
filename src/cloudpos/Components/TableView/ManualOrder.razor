<div class="menu-selection-section mb-4">
    <div class="mb-3 d-flex gap-2">
        <select class="form-select" style="width: 150px;" @bind="_selectedCategoryId">
            @foreach (var category in _allCategories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
        <input @bind="_searchTerm" @bind:event="oninput" placeholder="메뉴 검색" class="form-control" />
    </div>
    <div class="list-group list-group-flush border rounded" style="max-height: 22vh; overflow-y: auto;">
        @if (!FilteredItems.Any())
        {
            <div class="list-group-item text-muted text-center">검색 결과가 없습니다.</div>
        }
        else
        {
            <Virtualize Items="FilteredItems" Context=item>
                <ItemContent>
                    <button type="button" @onclick="() => AddToOrder(item)" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        @item.Name
                        <span class="text-muted small">@CurrencyFormat(item.Price)</span>
                    </button>
                </ItemContent>
            </Virtualize>
        }
    </div>
</div>

<hr />

<div class="order-summary-section">
    <h5 class="mb-3">주문서</h5>
    @* [수정] max-height와 overflow-y 스타일을 추가합니다. *@
    <div class="order-items-wrapper" style="min-height: 15vh; max-height: 18vh; overflow-y: auto;">
        @if (!_currentOrderItems.Any())
        {
            <div class="text-center text-muted mt-4">
                <i class="bi bi-exclamation-triangle fs-1"></i>
                <p>주문서가 비었습니다.</p>
            </div>
        }
        else
        {
            @foreach (var orderItem in _currentOrderItems)
            {
                <div class="border-bottom py-2 d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <button class="btn btn p-0 border-0 bg-transparent me-2" @onclick="() => Remove(orderItem)"><i class="bi bi-x"></i></button>
                        <span class="me-1">@orderItem.Item.Name</span>
                    </div>
                    <div class="d-flex">
                        <span class="text-secondary me-3" style="line-height: 1.8">@CurrencyFormat(@orderItem.Item.Price * orderItem.Quantity)</span>
                        <button class="cart-toggle btn p-0 border-0 bg-transparent" @onclick="() => DecreaseQuantity(orderItem)">
                            <i class="bi bi-dash" style="font-size: 1.2rem"></i>
                        </button>
                        <div class="form-control px-2 py-0 text-center mx-1" style="font-size: 14px;width: 32px;line-height: 1.8">@orderItem.Quantity</div>
                        <button class="cart-toggle btn p-0 border-0 bg-transparent" @onclick="() => IncreaseQuantity(orderItem)">
                            <i class="bi bi-plus" style="font-size: 1.2rem"></i>
                        </button>
                    </div>
                </div>
            }
        }
    </div>
    <hr />
    <div class="d-flex justify-content-between fw-bold fs-5 px-2">
        <span>총 금액:</span>
        <span class="text-success">@CurrencyFormat(TotalAmount)</span>
    </div>
</div>

<div class="mt-4">
    <button type="button" class="btn btn-success w-100" @onclick="SubmitOrderAsync" disabled="@(!_currentOrderItems.Any())">
        주문 전송
    </button>
</div>